{
  "name": "nanoact",
  "description": "Nano frontend rendering library",
  "version": "0.0.0",
  "keywords": [
    "javascript",
    "typescript",
    "library",
    "ui"
  ],
  "author": "Shuntaro Nishizawa <me@shun.technology>",
  "license": "MIT",
  "type": "module",
  "types": "dist/nanoact.d.ts",
  "exports": {
    ".": {
      "browser": "dist/nanoact.module.js",
      "require": "dist/nanoact.cjs",
      "import": "dist/nanoact.esm.js",
      "umd": "dist/nanoact.umd.js",
      "default": "dist/nanoact.module.js",
      "types": "dist/nanoact.d.ts"
    }
  },
  "scripts": {
    "build": "microbundle src/nanoact.ts",
    "format": "prettier -w --ignore-path .gitignore '**/*.ts'"
  },
  "devDependencies": {
    "microbundle": "^0.14.2",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  }
}
